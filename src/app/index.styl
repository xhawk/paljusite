@import url("//fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

html
  font-family 'Roboto Slab', serif

html, body
  100%

body
  font-size 1.25em

[layout=row]
  flex-direction row

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

color-pri0 = #2F50CB
color-pri1 = #778DE0
color-pri2 = #506CD4
color-pri3 = #1036C1
color-pri4 = #0C288B

color-sec1-0 = #FFBB21
color-sec1-1 = #FFD677
color-sec1-2 = #FFC84B
color-sec1-3 = #FFB100
color-sec1-4 = #CE8F00

red = #df0a0a

white = #ffffea

.color-pri0 { color: color-pri0 }	/* Main Primary color */
.color-pri1 { color: color-pri1 }
.color-pri2 { color: color-pri2 }
.color-pri3 { color: color-pri3 }
.color-pri4 { color: color-pri4}

.color-sec1-0 { color: color-sec1-0 }	/* Main Secondary color (1) */
.color-sec1-1 { color: color-sec1-1 }
.color-sec1-2 { color: color-sec1-2 }
.color-sec1-3 { color: color-sec1-3 }
.color-sec1-4 { color: color-sec1-4 }

md-toolbar
  &.md-default-theme
    background-color color-pri4

md-content
  .background
    background-image url("/assets/images/background-b.jpg")
    background-size cover
    background-repeat no-repeat
    background-position center
    text-align center
    height 91vh

.md-toolbar-tools
  a
    color color-sec1-1
  .primary
    font-style bold
    font-size 1.25em

.md-open-menu-container
  a
    color color-sec1-3

.hero
  min-height 800px
  font-size 1.5em
  h1
    font-size 5em
    text-align center
    text-shadow 2px 1px color-sec1-4
    color color-sec1-2
    padding-bottom 0.4em
  p
    text-shadow 2px 1px color-pri2
    color white

.herosmall
  min-height 800px
  font-size 1.5em
  h1
    font-size 4em
    text-align center
    text-shadow 2px 1px color-sec1-4
    color color-sec1-2
    padding-bottom 0.4em
    margin-top 0
    margin-bottom 0.5em
  p
    text-shadow 2px 1px color-pri2
    color white

h2
  color color-pri4

h3
  color color-pri5
  padding-left 1em

.content
  padding-left 2em

.price
  color red
  font-weight bold

.ng-scope
  height 100%

