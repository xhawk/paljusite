html
  font-family 'Roboto Slab', serif

html, body
  100%

[layout=row]
  flex-direction row

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

md-toolbar
  &.md-default-theme
    background-color black

md-content
  height 100%

md-content
  &.background
    background-image url("/assets/images/palju/IMG-20150803-WA0000.jpg")
    background-size cover
    background-repeat no-repeat


